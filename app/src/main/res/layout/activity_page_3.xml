<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MemberSearchView"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="갈릴리수양관 / 소망의 동산"
        android:textColor="#ffffff"
        android:textSize="11dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/black"
        />

    <ImageButton
        android:id="@+id/ms_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/home"
        android:padding="0dp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/black"
        />

    <View
        android:id="@+id/black"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/blue"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/black"
        />

    <ImageView
        android:id="@+id/group_7"
        android:layout_width="301dp"
        android:layout_height="171dp"
        android:src="@drawable/group_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue" />

    <View
        android:id="@+id/Search_View"
        android:layout_width="350dp"
        android:layout_height="325dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성도"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        app:layout_constraintStart_toStartOf="@id/Search_View"
        app:layout_constraintTop_toBottomOf="@id/group_7"
        />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홍길동"
        android:textSize="48dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_7"
        />

    <TextView
        android:id="@+id/detail_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="형제"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="@id/Search_View"
        app:layout_constraintTop_toBottomOf="@id/group_7"
        />

    <View
        android:id="@+id/btn_view_1"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_7"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textbox"
        app:layout_constraintStart_toStartOf="@id/btn_view_1"
        app:layout_constraintTop_toTopOf="@id/btn_view_1"
        />

    <TextView
        android:id="@+id/detail_reborn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 1월 16일"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="@id/btn_view_1"
        app:layout_constraintTop_toTopOf="@id/btn_view_1"
        />

    <View
        android:id="@+id/btn_view_2"
        android:layout_width="330dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textbox_2"
        app:layout_constraintStart_toStartOf="@id/btn_view_2"
        app:layout_constraintTop_toTopOf="@id/btn_view_2"
        />

    <TextView
        android:id="@+id/detail_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1900년 3월 20일"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="@id/btn_view_2"
        app:layout_constraintTop_toTopOf="@id/btn_view_2"
        />

    <View
        android:id="@+id/btn_view_3"
        android:layout_width="330dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textbox_3"
        app:layout_constraintStart_toStartOf="@id/btn_view_3"
        app:layout_constraintTop_toTopOf="@id/btn_view_3"
        />

    <TextView
        android:id="@+id/detail_death"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 1월 13일"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="@id/btn_view_3"
        app:layout_constraintTop_toTopOf="@id/btn_view_3"
        />

    <View
        android:id="@+id/btn_view_4"
        android:layout_width="330dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_3"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textbox_4"
        app:layout_constraintStart_toStartOf="@id/btn_view_4"
        app:layout_constraintTop_toTopOf="@id/btn_view_4"
        />

    <TextView
        android:id="@+id/detail_churchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울중앙교회"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="84dp"
        app:layout_constraintEnd_toEndOf="@id/btn_view_4"
        app:layout_constraintTop_toTopOf="@id/btn_view_4"
        />

    <ImageButton
        android:id="@+id/ms_family_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_2"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/Search_View"
        />

    <ImageButton
        android:id="@+id/ms_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/group_4"
        android:padding="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Search_View"
        />
</androidx.constraintlayout.widget.ConstraintLayout>